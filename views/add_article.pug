extends layout

block content

    h1 #{title}
    h2 #{content}
    form(method='POST', action='/articles/add')
      #form-group 
        label Title:
        input.form-control(name='title', type='text')
      //         
           #form-group 
              label Author:
              input.form-control(name='author', type='text')  
      
      #form-group 
        label Content:
        textarea.form-control(name='content')
        br
      input.btn.btn-primary(type='submit', value='Submit')    
