extends layout

block content
  h1="Login"
  form(method='POST', action='/users/login')
    #form-group
      label.col-form-label-lg Username
      input.form-control(name='username', type='text', value=username) 
  
    #form-group
      label.col-form-label-lg Password
      input.form-control(name='password', type='password', value=password)
    
      br
    input.btn.btn-primary(type='submit', value='Submit')    
